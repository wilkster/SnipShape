      'CYAN',                       '0x00FFFF',
      'BRIGHT TEAL',                '0x01F9C6',
      'LIGHTSEAGREEN',              '0x20B2AA',
      'TEAL',                       '0x008080',
      'DARK GREEN BLUE',            '0x1F6357',
      'SEAGREEN',                   '0x2E8B57',
      'OLIVE',                      '0x808000',
      'IRISH GREEN',                '0x08A04B',
