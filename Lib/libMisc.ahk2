      'ANTIQUEWHITE',               '0xFAEBD7',
      'YELLOW',                     '0xFFFF00',
      'GOLD',                       '0xFFD700',
      'DEEP YELLOW',                '0xF6BE00',
      'BRONZE',                     '0xCD7F32',
      'DARK HAZEL BROWN',           '0x473810',
      'GINGER RED',                 '0xB83C08',
      'RED GOLD',                   '0xEB5406',
      'ORANGE',                     '0xFFA500',
      'NEON ORANGE',                '0xFF6700',
      'BRIGHT ORANGE',              '0xFF5F1F',
      'DARKORANGE',                 '0xFF8C00',
      'ORANGERED',                  '0xFF4500',
      'RED',                        '0xFF0000',
      'NEON RED',                   '0xFD1C03',
      'CRANBERRY',                  '0x9F000F',
      'MAROON',                     '0x800000',
      'PLUM VELVET',                '0x7D0552',
      'BRIGHT PINK',                '0xFF007F',
      'DEEPPINK',                   '0xFF1493',
      'RASPBERRY',                  '0xE30B5D',
      'CRIMSON',                    '0xDC143C',
      'BRIGHT NEON PINK',           '0xF433FF',
      'AQUA',                       '0x00FFFF',
      'MAGENTA',                    '0xFF00FF',
      'MEDIUMSLATEBLUE',            '0x7B68EE',
