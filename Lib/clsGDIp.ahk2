      ;    , NumPut("Int",    0xE200B, bmd, 12) ; PixelFormat
      ;    , NumPut("UPtr",      pBits, bmd, 16) ; Scan0
      DllCall("gdiplus\GdipBitmapLockBits"
            ,    "UPtr", pBitmap
            ,    "UPtr", Rect.ptr
            ,    "uint", 5            ; ImageLockMode.UserInputBuffer | ImageLockMode.ReadOnly
            ,    "int", 0xE200B       ; Format32bppPArgb
