         this.baseThickness := 1
      }
      __Delete() {
         If (super.Length) {
            this.Reset()
         }
         this.PenThickness := ""
      }
      Add(color, thickness) {
         pen := GDIp.CreatePen(color, thickness)
         super.push(pen)
         this.PenThickness[pen] := thickness
         Return pen
      }
      Reset() {
         Loop (super.Length) {
            GDIp.DeletePen(super.Pop())
         }
         this.PenThickness.Clear()
