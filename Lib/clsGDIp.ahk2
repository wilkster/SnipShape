      GDIp.CreateRect(&Rect, 0, 0, Width, Height)
      bmd             := BitmapData()
      bmd.Width       := width
      bmd.Height      := height
      bmd.Stride      := 4 * Width
      bmd.PixelFormat := 0xE200B
      bmd.Scan0       := pBits

      ; bmd := Buffer(16 + 2 * A_PtrSize, 0)     ; sizeof(BitmapData) = 24, 32
      ;    , NumPut("UInt",     width, bmd,  0) ; Width
      ;    , NumPut("UInt",    height, bmd,  4) ; Height
