      ; struct BITMAPINFOHEADER - https://docs.microsoft.com/en-us/windows/win32/api/wingdi/ns-wingdi-bitmapinfoheader
      hdc := GDi.CreateCompatibleDC()
      hbm := GDI.CreateDIBSection(Width, -Height, hdc, 32, &pBits := 0)
