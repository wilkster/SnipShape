   Static DrawImage(pGraphics, pBitmap, dx := "", dy := "", dw := "", dh := "", sx := "", sy := "", sw := "", sh := "", Matrix := 1, Unit := 2, ImageAttr := 0) {
      usrImageAttr := 0
      If !ImageAttr {
         If !IsNumber(Matrix)
